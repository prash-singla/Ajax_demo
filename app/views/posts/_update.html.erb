 <table class="table">
      <thead>
        <tr>
          <th>Tittle</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.tittle %></td>
            <td><%= link_to 'Show', post, :class => "btn btn-info" %></td>
            <div>
              <td><%= link_to 'Edit', edit_post_path(post), :id => "popover-link", :rel =>"popover", remote: true, :class => "btn btn-success", :data => {:toggle => "popover", :content => "sorry for inconvenience"} %>
              </td>
              <div class="popover top">
                <div class="arrow"></div>
                <h3 class="popover-title">Popover top</h3>
                <div class="popover-content" id="edit-form">
                </div>
              </div>
            </div>  
            
            <td><%= link_to 'Destroy', post, method: :delete,remote: true, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>