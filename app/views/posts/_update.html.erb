 <table class="table">
      <thead>
        <tr>
          <th>Tittle</th>          
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.tittle %></td>            
            <div>
              <td><%= link_to 'Edit', edit_post_path(post), :id => "popover-link", remote: true, :class => "btn btn-success" %>
              </td>
              
            </div>  
            
            <td><%= link_to 'Destroy', post, method: :delete,remote: true, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>