  <!-- Modal -->
   

<div class="popover fade right in" style="top: 300px; left: 450px; display: block;" id="post-window">
  <h3 class="popover-title">Edit Post.</h3>
  <div class="popover-content">
    <%= form_for @post, remote: true, :method => "patch" do |f| %>    
        <div class="field">
            <%= f.label :tittle %><br>
            <%= f.text_field :tittle %>
        </div>
        <div class="actions">
          <%= f.submit  %>
        </div>            
    <% end  %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function(){

    
    $("#id_popover").blur(function(){
      $(this).popover('hide');

    });
    
    
  });
</script>