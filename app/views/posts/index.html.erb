
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h2><strong>Listing Posts</strong></h2></div>
  <div id="all-posts">
    <table class="table">
      <thead>
        <tr>
          <th><strong>Tittle</strong></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.tittle %></td>
            <div id=<%= "edit_link_#{post.id}"%>>
              <td>
                <%= link_to 'Edit', edit_post_path(post), :id => "popover-link", :rel =>"popover", remote: true, :class => "btn btn-success", :data => {:toggle => "popover", :content => "sorry for inconvenience"} %>
              </td>
              <div class="popover top">
                <!-- <div class="arrow"></div>-->
                <h3 class="popover-title">Popover top</h3>
                <div class="popover-content" id="edit-form">
                </div>
              </div>
            </div>  
            
            <td><%= link_to 'Destroy', post, method: :delete,remote: true, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<div id="popovr-content" ></div>

<%= link_to 'New Post', new_post_path,:class => "btn btn-primary btn-lg" %>
<br>
</br>


